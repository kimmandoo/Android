<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_bar_ll"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/search_iv_back"
            app:srcCompat="?attr/actionModeCloseDrawable"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/search_et_keyword"
            android:background="@drawable/bg_radius_round_grey"
            android:hint="@string/search_text"
            android:padding="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/search_tv_recent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar_ll"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/search_recent"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/search_rv_keyword"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_tv_recent"/>
</androidx.constraintlayout.widget.ConstraintLayout>